<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.josungryong.graduateproject3.Project_Fragment.ProjectFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:text="프로젝트"
                android:textSize="30sp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/project_all"
                android:clickable="true"/>

        </LinearLayout>

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:text="등록"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/project_write"
                android:layout_alignParentRight="true"
                android:clickable="true"/>

            <TextView
                android:text="최신순"
                android:textSize="17dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/project_latest"
                android:clickable="true"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            android:id="@+id/recyclerViewProject"/>

    </LinearLayout>

</FrameLayout>